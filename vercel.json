{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "^/([^/]+)\\.([a-zA-Z0-9]+)$",
      "dest": "public/$1.$2"
    },
    {
      "src": "^/([^/\\.]+)(/.*)?$",
      "dest": "server/index.js"
    }
  ]
}

